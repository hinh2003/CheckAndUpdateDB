<% if object.errors.any? %>
  <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 p-4 rounded-md mb-6 shadow">
    <div class="font-semibold text-lg flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-700 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M12 4c4.418 0 8 3.582 8 8s-3.582 8-8 8-8-3.582-8-8 3.582-8 8-8z" />
      </svg>
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul class="mt-2 list-disc list-inside">
      <% object.errors.full_messages.each do |msg| %>
        <li class="text-sm"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
