<% provide(:title, "Log in") %>
<div class="flex justify-center mb-20">
  <div class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="mb-6">
        <%= f.label :email, class: 'block text-lg font-semibold mb-2' %>
        <%= f.email_field :email, class: 'w-full px-6 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg' %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: 'block text-lg font-semibold mb-2' %>
        <%= f.password_field :password, class: 'w-full px-6 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg' %>
      </div>
      <%= f.submit "Log in", class: "w-full bg-blue-500 text-white py-3 rounded-md text-xl hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>
    <p class="mt-6 text-center text-lg">New user? <%= link_to "Sign up now!", signup_path, class: "text-blue-500" %></p>

  </div>
</div>
